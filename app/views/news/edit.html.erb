<%= javascript_include_tag "/assets/kindEditor/kindeditor-min.js" %>
<%= javascript_include_tag "/assets/kindEditor/zh_CN.js" %>
<div class="box">
  <div class="data_box">
    <div class="clear"></div>
    <div class="data_body">
      <div>
        <div>
          <%= form_tag "/news/update" do %>
          <input type="hidden" name="edit_new_page" value="<%= @page %>"/>
          <input type="hidden" name="edit_new_id"  value="<%= @new.id %>"/>
            <div>
              <div class="news_title">
                <input id="edit_new_title" name="edit_new_title" type="text" value="<%= @new.title %>"/>
                
              </div>
              <div class="news_details">
                <textarea id="edit_new_textarea" name="edit_new_textarea" cols="" rows=""><%= @new.content %></textarea>
                <input type="hidden" id="edit_new_content" name="edit_new_content"/>
              </div>
            </div>
            <div class="btn_box">
              <button type="submit" id="edit_submit_btn" class="confirm_btn">确定</button>
              <button type="reset" class="cancel_btn" onclick="cancel_edit_new(<%= @page %>)">取消</button>
            </div>
          <% end %>
          <script type="text/javascript">
            var edit_news_detail;
            $(function() {
              edit_news_detail = KindEditor.create('textarea[id="edit_new_textarea"]', {
                allowFileManager : true
              });
            });
          </script>
        </div>
      </div>
    </div>
  </div>
</div>