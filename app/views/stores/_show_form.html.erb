      <div class="popup_box">
        <h1>门店详细<a href="#" class="close">关闭</a></h1>
        <div class="popup_body">
          <div class="popup_body_area">
            <div class="seeProDiv">
              <div class="seeProDiv_l">省市：</div>
              <div class="seeProDiv_r">
                <% if !@store.city_id.nil? %>
                  <td>
                    <%= City.find(@store.city.parent_id).name %>/<%= @store.city.name %>
                  </td>
                <% else %>
                  <td>-/-</td>
                <% end %>
              </div>
            </div>
            <div class="seeProDiv">
              <div class="seeProDiv_l">门店名称：</div>
              <div class="seeProDiv_r"><%= @store.name %></div>
            </div>
            <div class="seeProDiv">
              <div class="seeProDiv_l">负责人：</div>
              <div class="seeProDiv_r"><%= @store.contact %></div>
            </div>
            <div class="seeProDiv">
              <div class="seeProDiv_l">联系电话：</div>
              <div class="seeProDiv_r"><%= @store.phone %></div>
            </div>
            <div class="seeProDiv">
              <div class="seeProDiv_l">地址：</div>
              <div class="seeProDiv_r"><%= @store.address %></div>
            </div>
            <div class="seeProDiv">
              <div class="seeProDiv_l">开店时间：</div>
              <div class="seeProDiv_r"><%= @store.opened_at.strftime("%Y-%m-%d") %></div>
            </div>
            <div class="seeProDiv">
              <div class="seeProDiv_l">门店状态：</div>
              <div class="seeProDiv_r">
                <% if @store.status == 0 %>
                  已关闭
                <% elsif @store.status == 1 %>
                  正常营业
                <% else %>
                  正在装修
                <% end %>
              </div>
            </div>
          </div>
          <div class="btn_box"><button class="cancel_btn">关闭</button></div>
        </div>
      </div>