<!doctype html>
<html>
<head>
<meta charset="utf-8"/>
<title>服务管理</title>
<%= stylesheet_link_tag    "application", "style" %>
<%= javascript_include_tag "application", "main", "complaints", "pleaseds" %>
<script type="text/javascript" src="/assets/My97DatePicker/WdatePicker.js" ></script>
<!--[if IE 6]>
<script src="js/DD_belatedPNG_0.0.8a-min.js"></script>
<script>
  DD_belatedPNG.fix('*');
</script>
<![endif]-->
</head>
<body>
     <div class="head">
          <div class="box">
               <div class="logo">
                 <% if cookies[:admin_id] %>
          <span>澜泰总部后台管理系统</span>
          <% elsif cookies[:manage_id] %>
            <span>澜泰连锁店后台管理系统</span>
          <% end %>
               </div>
               <div class="login">
                 你好：
          <% if cookies[:admin_id] %>
            <%= cookies[:admin_name] %>
          <% elsif cookies[:manage_id] %>
            <%= cookies[:manage_name] %>
          <% end %>
          | <% if cookies[:admin_id] %><a href="/logins/logout">退出</a><% elsif cookies[:manage_id] %><a href="/s_staffs/logout">退出</a><% end %>
               </div>
               <div class="clear"></div>
               <div class="nav">
                    <ul>
                        <li><a href="/complaints" class=<%= is_hover("complaints") %>>投诉情况</a></li>
                        <% if permission?(:service_manage, :satisfied) || cookies[:manage_id] %><li><a href="/pleaseds" class=<%= is_hover("pleaseds") %>>满意度</a></li><% end %>
                        <% if permission?(:service_manage, :revisit_check) || cookies[:manage_id] %><li><a href="/revisits" class=<%= is_hover("revisits") %>>回访情况</a></li><% end %>
                    </ul>
               </div>
               <div class="back"><a href="/backstages" title="返回">Back</a>服务管理</div>
          </div>
     </div>
     <div class="main">
         <%= yield %>
        <div class="tab_popup" id="complaint_order_detail" style="display:none;">
        </div>
     </div>
     <div class="foot"><p>Copyright © 2013 杭州澜泰 版权所有</p></div>
     <div class="mask"></div>
     <%= render :partial => "/common/tishi_alert" %>
</body>
</html>
