<!doctype html>
<html>    <!--营销管理布局模板-->
  <head>
    <meta charset="utf-8"/>
    <title>营销管理</title>
    <%= stylesheet_link_tag    "application", "style" %>
    <%= javascript_include_tag "application", "main", "My97DatePicker/WdatePicker", "sales", "sv_cards", "use_search_validate" %>
    <!--[if IE 6]>
    <script src="/assets/DD_belatedPNG_0.0.8a-min.js"></script>
    <script>
      DD_belatedPNG.fix('*');
    </script>
    <![endif]-->
  </head>
  <body>
    <div class="head">
      <div class="box">
        <div class="logo">澜泰总部后台管理系统</div>
        <div class="login">你好：<%= cookies[:user_name] %> | <a href="/logins/logout">退出</a></div>
        <div class="clear"></div>
        <div class="nav">
          <ul>
            <li><a href="/sv_cards" class=<%= is_hover("sv_cards") %>>优惠卡</a></li>
            <li><a href="/sales" class=<%= is_hover("sales") %>>活动</a></li>
            <li><a href="/products"
                   <% if controller.controller_name=="products" and (controller.action_name =~/service/) == nil %> class="hover" <%end%> id="product">产品</a></li>
            <li><a href="/products/prod_services"
                   <% if controller.controller_name=="products" and controller.action_name =~/service/ %> class="hover" <%end%> id="service">服务</a></li>
          </ul>
        </div>
        <div class="back"><a href="/backstages" title="返回">Back</a>营销管理</div>
      </div>
    </div>
    <div class="main">

      <%= yield %>
    </div>
    <div class="foot"><p>Copyright © 2013 杭州澜泰 版权所有</p></div>
    <div class="mask"></div>
    <%= render :partial => "/common/tishi_alert" %>
  </body>
</html>
