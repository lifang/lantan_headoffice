<!doctype html>
<html>
  <head>
    <meta charset="utf-8"/>
    <title>运营管理--门店</title>
    <%= stylesheet_link_tag    "application", "style", "jquery-ui-1.10.0.custom.min.css" %>
    <%= javascript_include_tag "application", "jquery-ui-1.10.0.custom.min", "jquery.ui.datepicker-zh-CN", "main", "operate_manage" %>
    <!--[if IE 6]>
    <script src="js/DD_belatedPNG_0.0.8a-min.js"></script>
    <script>
      DD_belatedPNG.fix('*');
    </script>
    <![endif]-->
  </head>
  <body>
    <div class="head">
      <div class="box">
        <div class="logo">澜泰总部后台管理系统</div>
        <div class="login">你好：XXX | <a href="#">退出</a></div>
        <div class="clear"></div>
        <div class="nav">
          <ul>
            <li><a href="#" class="hover">门店</a></li>
          </ul>
        </div>
        <div class="back"><a href="/backstage" title="返回">Back</a>运营管理</div>
      </div>
    </div>
    <div class="main">
      <div class="box">
        <div class="data_box">
          <div class="search">
            <%= form_tag "/operate_manages", :method => :get do %>
              <div>
                <label>省/市：</label>
                <select id="select_province" name="select_province" class="select_marginRight">
                  <option value="0">请选择省份</option>
                  <% @provinces.each do |province| %>
                    <option value="<%= province.id %>" <% if params[:select_province].to_i != 0 && params[:select_province].to_i == province.id%>selected<% end %>><%= province.name %></option>
                  <% end %>
                </select>
                <select id="select_city" name="select_city" class="select_marginRight">
                  <% if params[:select_province].to_i != 0 && params[:select_city].to_i != 0 %>
                    <% @cities.each do |c| %>
                      <option value="<%= c.id %>" <% if params[:select_city].to_i == c.id %>selected<% end %>><%= c.name %></option>
                    <% end if @cities %>
                  <% else %>
                    <option value="0">------</option>
                  <% end %>
                </select>
              </div>
              <div>
                <label>店名：</label>
                <input type="text" id="store_name" name="store_name" <% if !params[:store_name].nil? %>value="<%= params[:store_name] %>"<% end %>></input>
              </div>
              <div>
                <button id="search_button" class="search_btn">查询</button>
              </div>
            <% end %>
          </div>
          <% if flash[:msg] %>
            <div><%= flash[:msg] %></div>
          <% end %>
          <div class="data_menu">        
            <%= link_to "新建申请", "JavaScript:void(0)", :id => "new_store_a"%>
          </div>
          <div class="clear"></div>
          <div class="data_body">
            <div>
              <table id="show_stores_detail" width="100%" border="0" cellspacing="0" cellpadding="0" class="data_table">
                <thead>
                  <tr class="hbg">
                    <td>省市</td>
                    <td>门店名称</td>
                    <td>负责人</td>
                    <td>联系电话</td>
                    <td>地址</td>
                    <td>开业时间</td>
                    <td>门店状态</td>
                    <td>操作</td>
                  </tr>
                </thead>
                <tbody>
                  <% if @stores.blank? %>
                    <tr>
                      <th colspan="8">当前无门店!</th>
                    </tr>
                  <% else %>
                    <% @stores.each do |store| %>
                      <tr>
                        <% if !store.city_id.nil? %>
                          <td>
                            <%= City.find(store.city.parent_id).name %>/<%= store.city.name %>
                          </td>
                        <% else %>
                          <td>-/-</td>
                        <% end %>
                        <td><%= store.name %></td>
                        <td><%= store.contact %></td>
                        <td><%= store.phone %></td>
                        <td><%= store.address %></td>
                        <td><%= store.opened_at.strftime("%Y-%m-%d") %></td>
                        <% if store.status == 0 %>
                          <td>已关闭</td>
                        <% elsif store.status == 1 %>
                          <td>正常营业</td>
                        <% else %>
                          <td>正在装修</td>
                        <% end %>
                        <td>                        
                          <%= link_to "编辑", "JavaScript:void(0)", :name => "edit_button", :sid => store.id %>
                          <%= link_to "详细", "JavaScript:void(0)", :name => "show_button", :sid => store.id %>
                          <%= link_to "删除", store_path(store.id), :method => :delete, :confirm => "确定要删除吗？" %>
                        </td>
                      </tr>
                    <% end %>
                  <% end %>
                </tbody>
              </table>
             <%= will_paginate  @stores, :previous_label => "上一页", :next_label=> "下一页", :class => "pageTurn" %>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="foot"><p>Copyright © 2013 杭州澜泰 版权所有</p></div>
    <div class="mask"></div>
    <div id="new_store" class="tab_popup" style="display:none;">    
    </div>
    <div id="show_detail" class="tab_popup" style="display:none;">
    </div>
  </body>
</html>