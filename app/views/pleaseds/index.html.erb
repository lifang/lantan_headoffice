<div class="box">
  <div class="data_box">
    <div class="search">
      <div><label>统计月份：</label><%=  @current_time %></div>
      <%= form_tag "/pleaseds", :method => :get do  %>
      <div><label>时间：</label>
        <select name="search_time">
          <% @pleased_time.each do |pt| %>
          <option value="<%= pt %>" <% if !params[:search_time].nil? && params[:search_time] == pt %>selected<% end %>><%= pt %></option>
          <% end %>
        </select>
      </div>
      <% if cookies[:admin_id] %>
      <div>
        <label>区域：</label>
        <select id="search_province" name="search_province" class="select_marginRight">
          <option value="0">全部</option>
          <% @provinces.each do |p| %>
          <option value="<%= p.id %>" <% if !params[:search_province].nil? && params[:search_province].to_i != 0 && params[:search_province].to_i == p.id %>selected<% end %>><%= p.name %></option>
          <% end %>
        </select>
        <select id="search_city" name="search_city">
          <% if !@cities.blank? %>
          <option value="0">请选择城市</option>
          <% @cities.each do |c| %>
          <option value="<%= c.id %>" <% if params[:search_city].to_i == c.id %>selected<% end %>><%= c.name%></option>
          <% end %>
          <% else %>
          <option value="0">------</option>
          <% end %>
        </select>
      </div>
      <% elsif cookies[:manage_id] %>
        <div>
          <label>请选择门店：</label>
          <select id="search_store_name" name="search_store_name">
          <option value="0">请选择门店</option>
          <% @stores.each do |s| %>
          <option value="<%= s.id %>"<% if params[:search_store_name].to_i == s.id %>selected<% end %>><%= s.name %></option>
          <% end %>
          </select>
        </div>
      <% end %>
      <div><button class="search_btn" onclick="return search_validate()">查询</button></div>
      <% end %>
    </div>
    <div class="clear"></div>
    <div class="data_body">
      <div>
        <% if @blank_msg %>
        <h3 align="center"><%= @blank_msg %></h3>
        <% elsif @chart_image.nil? %>
          <% if cookies[:admin_id] %>
          <h3 align="center">当前城市无数据!</h3>
          <% elsif cookies[:manage_id] %>
          <h3 align="center">当前门店无数据!</h3>
          <% end %>
         <% else %>
            <% if cookies[:admin_id] %>
            <%= image_tag @chart_image.image_url %>
            <% elsif cookies[:manage_id] %>
            <img alt="lantan" src="<%= Constant::SERVER_PATH + @chart_image.image_url %>"/>
            <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>